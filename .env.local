# AI Cash Revolution - Matrix Web Application Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3002
NEXT_PUBLIC_WS_URL=ws://localhost:3002

# Authentication
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here

# Environment
NODE_ENV=development

# Optional: For production deployments
# NEXT_PUBLIC_API_URL=https://your-api-domain.com
# NEXT_PUBLIC_WS_URL=wss://your-api-domain.com

# Matrix Theme Configuration (Optional)
NEXT_PUBLIC_MATRIX_INTENSITY=medium
NEXT_PUBLIC_ENABLE_SOUND_EFFECTS=true
NEXT_PUBLIC_ENABLE_MATRIX_RAIN=true

# Performance (Optional)
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_CACHE_DURATION=3600

# Analytics (Optional)
# NEXT_PUBLIC_GA_ID=your_google_analytics_id
# NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# Build Configuration (Optional)
ASSET_PREFIX=
NEXT_TELEMETRY_DISABLED=1